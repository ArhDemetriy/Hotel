append styles
  link(rel="stylesheet", href="../../../components/button/button.scss")

append mixins
  mixin button_a (options)
    if !options
      - options = {}

    -
      var classes = ''
      classes += options.block_class ? ' ' + options.block_class : ''
      classes += ' button'
      classes += options.mod ? ' button-' + options.mod : ''

    .button
      a(class=classes
        href= options.href ? options.href : 'УКАЖИ ССЫЛКУ'
        )
        if options.mod=='transparent'
          .button__border_creator
            span(class='button__left_arrow')=options.arrow=='left'||options.arrow=='all' ? '<' : ''
            span=options.text ? options.text : 'УКАЖИ ПОДПИСЬ'
            span(class='button__right_arrow')=options.arrow=='right'||options.arrow=='all' ? '>' : ''
        else
          span(class='button__left_arrow')=options.arrow=='left'||options.arrow=='all' ? '<' : ''
          span=options.text ? options.text : 'УКАЖИ ПОДПИСЬ'
          span(class='button__right_arrow')=options.arrow=='right'||options.arrow=='all' ? '>' : ''